<p id="notice"><%= notice %></p>

<h1><%= current_user.name %>: Tracks</h1>
<p>This is where you'll find all of your tracks</p>

<table class="table-bordered">
  <thead>
    <tr>
      <th>Track name</th>
      <th>Created at</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.title %></td>
        <td><%= track.created_at %></td>
        <td><%= track.user_id %></td>
        <td><audio src= "<%= rails_blob_path(track.track_file) %> " controls='controls'></audio></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
