<nav class="navbar navbar-expand-sm" style="background-color: #000;">
  <a class="navbar-brand" href="/">
    <img src="/assets/magpielogo.png" class="logo" style="width:80px; vertical-align: middle; ">
  </a>
  </nav>

<p id="notice"><%= notice %></p>

<section>
  <div class="container">
  <h1>Admin area</h1>
  <p>Manage your tracks here</p>
  </div>
</section>

<div class="tracks-table">
<% @tracks.each do |track| %>
     <div class="row align-items-center">
     <div class="col-sm"><%=  track.title %></div>
     <div class="col-sm"><%=  track.user.band_name %></div>
      <div class="col-sm">Uploaded on <%= track.created_at.strftime("%Y-%m-%d") %></div>
      <div class="col-sm"><audio src= "<%= rails_blob_path(track.track_file) %> " controls='controls' class="audio"></audio></div>
      <div class="col-sm"><%= link_to 'Edit details', edit_admin_track_path(track) %></div>
      <div class="col-sm"><%= link_to 'Delete', track, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      <div class="col-sm"><%= link_to 'Download', rails_blob_path(track.track_file) %></div>
      </div>
      <hr />
      <% end %>
</div>

<section>
<div class="container">
<%= link_to 'Add new track +', new_track_path, class: "btn btn-warning btn-lg" %>
</div>
</section>
