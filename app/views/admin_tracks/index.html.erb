<%= render "layouts/usertopnav" %>

<p id="notice"><%= notice %></p>

<h1>Admin: tracks index</h1>

<!-- can't work out how to get this to show -->
<div>
<%= link_to 'New Track', new_track_path %>
</div>

<table class="table table-dark table-hover" style="width:100%;">
  <thead>
    <tr>
      <th>Track name</th>
      <th>Uploaded at</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.title %></td>
        <td><%= track.created_at  %></td>
        <td><audio src= "<%= rails_blob_path(track.track_file) %> " controls='controls'></audio></td>
        <td><%= link_to 'Show', track %></td>
        <td><%= link_to 'Edit', edit_admin_track_path(track) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Download', rails_blob_path(track.track_file) %> </td>
      </tr>
    <% end %>
  </tbody>



<br>
